<?xml version ="1.0" encoding="UTF-8"?>
<!DOCTYPE RULESET SYSTEM "rulefile.dtd"> 
<RULESET ID="rule_set_param">
  <!-- global part is the default for all rules -->
  <!-- overwritten by rule specific configuration -->
  <GLOBAL>
    <!-- how long the rules are active -->
    <PREF NAME="Duration">1000</PREF>
  </GLOBAL>
  <RULE ID="rule_id_param">
    <!-- packets comming from specfic address and protocol-->
    <FILTER NAME="SrcIP">ip_address_param</FILTER>
    <ACTION NAME="htb">
		<!-- match both directions of the flow -->
		<PREF NAME="Bidir">yes</PREF>
		
		<!-- Rate is on bytes  -->
		<PREF NAME="Rate" TYPE="Float64">rate_param</PREF>
		<PREF NAME="Burst" TYPE="UInt32">burst_param</PREF>
		<PREF NAME="Priority" TYPE="UInt32">priority_param</PREF>
		<!-- The value is in seconds -->
		<PREF NAME="Duration">duration_param</PREF>
    </ACTION>
  </RULE>  
</RULESET>
